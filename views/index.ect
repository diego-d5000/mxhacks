    <script>
		var coor = new google.maps.LatLng(19.35954, -99.26042);
		var radio = 500;
		var zom = 16;
		var cityCircle;
		var map;
		var infoWindow;
		var service;
		var markers = [];
		
		
	function initialize() {
	
	map = new google.maps.Map(document.getElementById('map-canvas'), {
		center: coor,
		zoom: zom,
		});
	
		google.maps.event.addListener(map, "rightclick", function(event) {
			var lat = event.latLng.lat();
			var lng = event.latLng.lng();
			coor = new google.maps.LatLng(lat, lng);
			var marker = new google.maps.Marker({
				position: coor,
				map: map,
				title: ' '
			});
			markers.push(marker);
			var populationOptions = {
		  strokeColor: '#000',
		  strokeOpacity: 0.3,
		  strokeWeight: 2,
		  fillColor: '#FFF',
		  fillOpacity: 0.35,
		  map: map,
		  center: coor,
		  radius: radio
		};
		// Add the circle for this city to the map.
		cityCircle = new google.maps.Circle(populationOptions);
	  	markers.push(cityCircle);
	  
	  
		  
		infoWindow = new google.maps.InfoWindow();
			
			// populate yor box/field with lat, lng
			//alert("Lat=" + lat + "; Lng=" + lng);
				    var token="d7848ed9-166d-4448-a9d4-78958333c11a";
					var base="http://www3.inegi.org.mx/sistemas/api/denue/v1/consulta/buscar/";
					var tipo = $("#tipo").val();
					var url = base+tipo+"/"+lat+","+lng+"/"+radio+"/"+token;
					var data2=[];
				$.get(url, function(data) {
				
					for (var i = data.length - 1; i >= 0; i--) {
						  	var objaux={nom:"",act:"",tamano:"",longi:"",lat:""};
						  	objaux.nom = data[i].Nombre;
						  	objaux.act = data[i].Clase_actividad;
						  	var aux;
						  	var num = data[i].Estrato.substr(0,data[i].Estrato.lastIndexOf(" "))
						  	
						  	if(num!='0 a 5'){
						  		if(num=='6 a 10'){
						  			aux="mediano";
						  		}else{
						  			aux="grande";
						  		}
						  	}else{
						  		aux="peque"
						  	};
						  	objaux.tamano=aux;
						  	objaux.longi = data[i].Longitud;
						  	objaux.lat = data[i].Latitud;
						  	data2.push(objaux);
						  };
						 console.log(data2);
						 //data2=[]
						 creapings(data2);
				})
				
				
			});
	
	}

function creapings(data2){	
var g=0;
var m=0;
var c=0;
	for (var i=0; i <= (data2.length) - 1 ; i++){
		var icono;
	if(data2[i].tamano == 'grande'){
					icono = "factory.png";
					g++;
				}else{
					if(data2[i].tamano == 'mediano'){
						icono = "apartment.png";
						m++;
					}else{
						icono = "home.png";
						c++;
					}
				}
	var coorde = new google.maps.LatLng(data2[i].lat, data2[i].longi);
	var marker = new google.maps.Marker({
				position: coorde,
				map: map,
				icon:icono 
			});
			actualizar();
			markers.push(marker);
	}
	
	var T=g+m+c;
	var color;
	var color2;
	if(T<7 && g<2){
						  	color='rgb(87,249,28)';	
								color2='#41AE19';	
						  }else{
						  	if(T>=7 && T<=14 && 3>=g && m<=5){
						  		color='rgb(255,248,68)';
									color2='#F6CE2D';	
						  	}else{
						  		color='red';
									color2='#990000';	
						  	}
						  }
	
	
	
var populationOptions = {
strokeColor: color2,
		  strokeOpacity: 0.8,
		  strokeWeight: 2,
		  fillColor: color,
		  fillOpacity: 0.35,
		  map: map,
		  center: coor,
		  radius: radio
		};
		// Add the circle for this city to the map.
		cityCircle = new google.maps.Circle(populationOptions);
		markers.push(cityCircle);
	  
	}
	
function actualizar(g,m,c){
		
		g1=document.getElementById("countG");
		m1=document.getElementById("countM");
		c1=document.getElementById("countP");
		g1.innerHTML=g;
		m1.innerHTML=m;
		c1.innerHTML=c;
}
	
function update() {
  setAllMap(null);
  actualizar();
}
function setAllMap(map) {
  for (var i = 0; i < markers.length; i++) {
    markers[i].setMap(map);
  }
}	
  	
google.maps.event.addDomListener(window, 'load', initialize);


